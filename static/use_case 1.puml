@startuml library_management

left to right direction
' skinparam linetype polyline
' skinparam linetype ortho

' Styling
skinparam packageStyle rectangle
skinparam shadowing false
skinparam handwritten false

' Actor styling
skinparam actor {
  BackgroundColor #E3F2FD
  BorderColor #1976D2
  BorderThickness 2
  FontSize 14
  FontStyle bold
}

' Use case styling
skinparam usecase {
  BackgroundColor #FFF9C4
  BorderColor #F57C00
  BorderThickness 2
  FontSize 12
  ArrowThickness 2
}

' Package styling
skinparam rectangle {
  BackgroundColor #E8F5E9
  BorderColor #388E3C
  BorderThickness 3
  FontSize 16
  FontStyle bold
}

' Arrow styling
skinparam ArrowColor #424242

actor Client as client

rectangle "Library Management System" {
  
  ' Client Use Cases - Grouped
  package "Member Services" #FFECB3 {
    usecase "Register Membership" as UC1
    usecase "Update Member Info" as UC7
    usecase "View Membership Card" as UC6
    usecase "View Fine Details" as UC5
  }
  
  package "Book Services" #C8E6C9 {
    usecase "Search Book" as UC8
    usecase "Request Book" as UC2
    usecase "Return Book" as UC3
    usecase "Check Book Status" as UC4
  }
  
  package "Transaction Management" #B2DFDB {
    usecase "Issue Book" as UC15
    usecase "Process Book Return" as UC16
    usecase "Calculate Fine" as UC17
  }
  
  
  ' System Use Cases (Internal)
  package "System Operations" #CFD8DC {
    usecase "Check Book Availability" as UC24
    usecase "Validate Member" as UC25
    usecase "Update Transaction Records" as UC26
  }
}

' Client relationships
client -- UC1
client -- UC2
client -- UC3
client -- UC4
client -- UC5
client -- UC6
client -- UC7
client -- UC8

' Include relationships
UC2 ..> UC24 : <<include>>
UC2 ..> UC25 : <<include>>
UC15 .l.> UC24 : <<include>>
UC15 ..> UC25 : <<include>>
UC15 ..> UC26 : <<include>>
UC16 ..> UC26 : <<include>>
UC16 .u..> UC17 : <<include>>

' Extend relationships
UC3 <.. UC17 : <<extend>>

note left of client
  <b>Client Functions:</b>
  - Register & manage profile
  - Search & borrow books
  - View status & fines
end note

@enduml