@startuml library_management

left to right direction
' skinparam linetype polyline
' skinparam linetype ortho

' Styling
skinparam packageStyle rectangle
skinparam shadowing false
skinparam handwritten false

' Actor styling
skinparam actor {
  BackgroundColor #E3F2FD
  BorderColor #1976D2
  BorderThickness 2
  FontSize 14
  FontStyle bold
}

' Use case styling
skinparam usecase {
  BackgroundColor #FFF9C4
  BorderColor #F57C00
  BorderThickness 2
  FontSize 12
  ArrowThickness 2
}

' Package styling
skinparam rectangle {
  BackgroundColor #E8F5E9
  BorderColor #388E3C
  BorderThickness 3
  FontSize 16
  FontStyle bold
}

' Arrow styling
skinparam ArrowColor #424242

actor Librarian as librarian

rectangle "Library Management System" {

  package "Transaction Management" #B2DFDB {
    usecase "Issue Book" as UC15
    usecase "Process Book Return" as UC16
    usecase "Calculate Fine" as UC17
  }

  ' System Use Cases (Internal)
  package "System Operations" #CFD8DC {
    usecase "Check Book Availability" as UC24
    usecase "Validate Member" as UC25
    usecase "Update Transaction Records" as UC26
  }
}


' Librarian relationships
librarian -l- UC15
librarian -l- UC16
librarian -l- UC17

' Include relationships
UC15 .u.> UC24 : <<include>>
UC15 .u.> UC25 : <<include>>
UC15 .u.> UC26 : <<include>>
UC16 .u.> UC26 : <<include>>
UC16 ..> UC17 : <<include>>

@enduml